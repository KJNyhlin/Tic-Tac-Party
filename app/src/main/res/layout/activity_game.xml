<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/gradient_background"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/russo_one"
        android:shadowColor="#424242"
        android:shadowDx="10"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="@string/app_name_title"
        android:textColor="#D8F4FF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/otherPlayerImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleTextView"
        app:srcCompat="@drawable/avatar_7" />

    <ImageView
        android:id="@+id/loggedInPlayerImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/avatar_9" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="295dp"
        android:layout_height="289dp"
        android:layout_margin="60dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595">

        <ImageButton
            android:id="@+id/gameButton1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_rowWeight="0"
            android:layout_columnWeight="0"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_button"
            android:elevation="16dp"
            android:shadowColor="#171717"
            tools:src="@drawable/vector__1_" />

        <ImageButton
            android:id="@+id/gameButton2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_button"
            android:elevation="16dp"
            tools:src="@drawable/profile_icon" />

        <ImageButton
            android:id="@+id/gameButton3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_button"
            android:elevation="16dp" />

        <ImageButton
            android:id="@+id/gameButton4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_button"
            android:elevation="16dp"
            tools:src="@drawable/vector__1_" />

        <ImageButton
            android:id="@+id/gameButton5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_button"
            android:elevation="16dp" />

        <ImageButton
            android:id="@+id/gameButton6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_button"
            android:elevation="16dp"
            tools:src="@drawable/profile_icon" />

        <ImageButton
            android:id="@+id/gameButton7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_button"
            android:elevation="16dp" />

        <ImageButton
            android:id="@+id/gameButton8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_button"
            android:elevation="16dp" />

        <ImageButton
            android:id="@+id/gameButton9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_button"
            android:elevation="16dp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black" />


    </GridLayout>

    <TextView
        android:id="@+id/loggedInUsername"
        android:layout_width="98dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="X - Coraline"
        android:textAlignment="center"
        android:textColor="#303030"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loggedInPlayerImage" />

    <TextView
        android:id="@+id/otherUsername"
        android:layout_width="112dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="O - Skatergurl"
        android:textAlignment="center"
        android:textColor="#323232"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherPlayerImage" />

    <TextView
        android:id="@+id/gameInfo"
        android:layout_width="224dp"
        android:layout_height="30dp"
        android:fontFamily="@font/roboto"
        android:text="Skatergurl's turn...."
        android:textAlignment="center"
        android:textColor="#323232"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Skatergurl's turn..." />

    <ImageView
        android:id="@+id/exitImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_6" />

    <ImageView
        android:id="@+id/helpImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_4" />

</androidx.constraintlayout.widget.ConstraintLayout>